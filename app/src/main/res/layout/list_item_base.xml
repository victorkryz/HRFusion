<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imgDropDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_chevron_right_black_02_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/details_image_padding_top_bottom"
        android:paddingBottom="@dimen/details_image_padding_top_bottom"
        android:paddingLeft="@dimen/dropdown_image_padding_left_right"
        android:paddingRight="@dimen/dropdown_image_padding_left_right"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/tvIdTitle"
        android:text="@string/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/tvTitle"
        android:layout_alignStart="@+id/tvTitle"
        android:ellipsize="end"
        android:maxLines="1"
        style="@style/Common.Irrelevant"/>

    <TextView
        android:id="@+id/tvId"
        android:text="@string/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/tvIdTitle"
        android:layout_alignBaseline="@+id/tvIdTitle"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/Common.Irrelevant"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignTop="@+id/imgDropDown"
        style="@style/Item.Title"
        android:text="@string/sample_text"
        android:width="200dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_alignParentStart="true"/>


</merge>